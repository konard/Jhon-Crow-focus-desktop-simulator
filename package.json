{
  "name": "focus-desktop-simulator",
  "version": "1.0.0",
  "description": "A high-performance desktop simulator - focus tool for Windows with isometric 3D desk and interactive objects",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win --publish never",
    "build:dir": "electron-builder --win --dir"
  },
  "keywords": [
    "focus",
    "productivity",
    "desktop",
    "simulator",
    "3d",
    "isometric"
  ],
  "author": "Jhon-Crow",
  "license": "Unlicense",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "three": "^0.160.0"
  },
  "build": {
    "appId": "com.jhoncrow.focus-desktop-simulator",
    "productName": "Focus Desktop Simulator",
    "icon": "assets/icon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "icon": "assets/icon.png"
    },
    "mac": {
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}
